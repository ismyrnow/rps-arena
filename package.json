{
  "name": "rps-arena",
  "version": "1.0.0",
  "description": "A real-time rock-paper-scissors game",
  "main": "dist/index.js",
  "scripts": {
    "start": "bun run dist/index.js",
    "dev": "bun run build:client && bun --watch src/index.ts",
    "dev:client": "bun build src/client/index.tsx --outdir ./dist/public --watch",
    "build": "bun run build:server && bun run build:client",
    "build:server": "tsc",
    "build:client": "bun build src/client/index.tsx --outdir ./dist/public",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "daisyui": "^5.5.17",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
